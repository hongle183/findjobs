<!-- ================ contact section start ================= -->
<section class='contact-section'>
    <div class='container'>
        <div class='row'>
            <div class="col-lg-12 mb-3">
                <h2 class="contact-title">My team</h2>
                <div class="row contact-team">
                    <div class="col-3">
                        <div class="card p-3">
                            <img class="img-fluid" src="/img/myteam/hong.jpg" alt="">
                            <span>Thu Hồng</span>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="card p-3">
                            <img class="img-fluid" src="/img/myteam/loan.jpg" alt="">
                            <span>Loan Anh</span>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="card p-3">
                            <img class="img-fluid" src="/img/myteam/chi.jpg" alt="">
                            <span>Quế Chi</span>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="card p-3">
                            <img class="img-fluid" src="/img/myteam/linh.jpg" alt="">
                            <span>Vinh Linh</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <h2 class='contact-title'>Get in Touch</h2>
                <div class="row">
                    <div class='col-lg-8'>
                        <form id="contact-form" action='/contact' method='post' novalidate='novalidate'>
                            <div class='form-group mb-2'>
                                <textarea class='form-control w-100' name='message' rules='required' cols='30' rows='3'
                                    placeholder='Enter Message'></textarea>
                                <div class="invalid-feedback text-left"></div>
                            </div>
                            <div class='form-row mb-2'>
                                <div class="form-group col mb-0">
                                    <input class='form-control' name='name' rules='required' type='text'
                                        placeholder='Enter your name' value="{{user.name}}"/>
                                    <div class="invalid-feedback text-left"></div>
                                </div>
                                <div class="form-group col mb-0">
                                    <input class='form-control' name='email' rules='required email' type='email'
                                        placeholder='Email' value="{{user.email}}"/>
                                    <div class="invalid-feedback text-left"></div>
                                </div>
                            </div>
                            <div class='form-group mb-2'>
                                <input class='form-control' name='subject' rules='required' type='text'
                                    onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter Subject'"
                                    placeholder='Enter Subject' />
                                <div class="invalid-feedback text-left"></div>
                            </div>
                            <div class='form-group mt-3 text-center'>
                                <button type='submit' class='btn head-btn2'>Send</button>
                            </div>
                        </form>
                    </div>
                    <div class='col-lg-3 offset-lg-1'>
                        <div class='media contact-info'>
                            <span class='contact-info__icon'><i class="fa-solid fa-house-laptop"></i></span>
                            <div class='media-body'>
                                <h3>TDT University</h3>
                                <p>Nguyễn Hữu Thọ, Q7, TPHCM</p>
                            </div>
                        </div>
                        <div class='media contact-info'>
                            <span class='contact-info__icon'><i class="fa-solid fa-phone"></i></span>
                            <div class='media-body'>
                                <h3>+84 338 681 682</h3>
                                <p>Mon to Fri 9am to 6pm</p>
                            </div>
                        </div>
                        <div class='media contact-info'>
                            <span class='contact-info__icon'><i class="fa-regular fa-paper-plane"></i></span>
                            <div class='media-body'>
                                <h3>findjobs@gmail.com</h3>
                                <p>Send us your query anytime!</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ================ contact section end ================= -->
<script src="/js/validator.js"></script>
